@model DrCleanCare.Models.ChangeUserPassViewModel

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-edit fa-fw"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nhập thông tin đổi mật khẩu
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(
                        "ChangePass",
                        "User",
                        FormMethod.Post,
                        new
                        {
                            @class = "form-horizontal",
                            enctype = "multipart/form-data"
                        }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.UserId)
                                    @Html.HiddenFor(model => model.UserName)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-4 text-right">
                                        <label class="control-label text-nowrap">Mật khẩu hiện tại</label>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.CurrentPassword, new { @class = "form-control", @placeholder = "Mật khẩu hiện tại", @type = "password", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.CurrentPassword)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-4 text-right">
                                        <label class="control-label text-nowrap">Mật khẩu mới</label>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu mới", @type = "password", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-4 text-right">
                                        <label class="control-label text-nowrap">Xác nhận Mật khẩu mới</label>
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.PasswordConfirm, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu mới", @type = "password", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.PasswordConfirm)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-4 text-right">
                                        <label class="control-label text-nowrap"></label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="submit" value="Lưu" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-success" style="width:120px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // set current active menu
        $("#menu-account").attr("class", "active");
    </script>
}


