@model DrCleanCare.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.png" />
    @Styles.Render("~/content/bootstrap")
    @Styles.Render("~/content/admin")
    @Scripts.Render("~/bundles/modernizr")
    @*<style>
            body {
                background: url(/Content/images/bg.jpg);
            }
        </style>*@
</head>
<body>

    <div class="container">
        <div class="row text-center">
            <img src="~/Content/Images/logo.jpg" style="margin-top:48px; width:31%;" />
        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập hệ thống</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @type = "text", @autofocus = "" })
                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @value = "true" })
                                Ghi nhớ tài khoản?
                            </div>
                                <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" value="Đăng nhập" class="btn btn-success btn-block" />
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-center" style="margin-top:32px;">
                <p><strong>(C) 2015, Công ty TNHH MTV TV SX & TM ĐỒNG NHÂN PHÁT</strong></p>
                <p>Đường số 2, KCN Bình Đường, Dĩ An, Bình Dương</p>
                <p>Phone: (84)-08-54.46.36.60 - 54.49.21.33</p>
                <p>Fax: (84)-08-38.95.51.56</p>
                <p>Hotline: 0903.62.40.60</p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/admin")

</body>
</html>
