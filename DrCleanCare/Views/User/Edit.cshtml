@model DrCleanCare.Models.EditUserViewModel
@{
    ViewBag.Title = "Cập nhật tài khoản";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title"><i class="fa fa-edit"></i>  @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cập nhật thông tin tài khoản
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.Username)
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Tên đăng nhập</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Tên đăng nhập", @type = "text", @autofocus = "", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(m => m.Username, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Mật khẩu</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Xác nhận mật khẩu</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.PasswordConfirm, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu", @type = "password" })
                                        @Html.ValidationMessageFor(m => m.PasswordConfirm, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Họ</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Họ", @type = "text" })
                                        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-nowrap">Tên</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Tên", @type = "text" })
                                        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @type = "Email" })
                                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"></label>
                                    <div class="col-sm-8">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @value = "true" })
                                        Kích hoạt tài khoản?
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="col-sm-12"><strong>Danh sách vai trò</strong></div>
                                @for (int i = 0; i < Model.SelectedRoleModels.Count; i++)
                                {
                                    <div class="col-sm-12 checkbox">
                                        <label>
                                            @Html.HiddenFor(m => m.SelectedRoleModels[i].RoleId)
                                            @Html.HiddenFor(m => m.SelectedRoleModels[i].RoleName)
                                            @Html.CheckBoxFor(m => m.SelectedRoleModels[i].IsSelected)
                                            @Model.SelectedRoleModels[i].RoleName
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> </label>
                                    <div class="col-sm-8">
                                        <input type="submit" value="Lưu" class="btn btn-success btn-sm" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-success btn-sm" style="width:120px;" />
                                        @Html.ActionLink("Trở về", "Index", null, new { @style = "width:120px;", @class = "btn btn-primary btn-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // set current active menu
        $("#menu-system").attr("class", "active");
    </script>
}