@model DrCleanCare.Models.EditRoleViewModel

@{
    ViewBag.Title = "Vai trò";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-tag"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-edit"></i> Cập nhật vai trò
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.RoleId)

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap">Tên vai trò</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", @placeholder = "Tên vai trò", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.RoleName, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap">Diễn giải</label>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Mô tả vai trò", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Description, null, new { @class = "help-inline" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-nowrap"></label>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Cập nhật" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-success" style="width:120px;" />
                                        @Html.ActionLink("Trở về", "Index", null, new { @style = "width:120px;", @class = "btn btn-primary btn-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // set current active menu
        $("#menu-system").attr("class", "active");
    </script>
}
