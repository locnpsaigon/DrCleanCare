@model DrCleanCare.Models.AddCustomerViewModel

@{
    ViewBag.Title = "Tạo thông tin khách hàng";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-cubes"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-plus-square"></i> Tạo mới khách hàng
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(
                        "Add",
                        "Customer",
                        FormMethod.Post,
                        new
                        {
                            @class = "form-horizontal",
                            enctype = "multipart/form-data"
                        }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Họ và tên</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Tên khách hàng", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.FullName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Địa chỉ</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Địa chỉ khách hàng", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Address)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Điện thoại</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Số điện thoại", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Email</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Địa chỉ mail", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Mã số thuế</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.TaxCode, new { @class = "form-control", @placeholder = "Mã số thuế", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.TaxCode)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Tên người nhận</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.ShippingContact, new { @class = "form-control", @placeholder = "Tên người nhận hàng", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.ShippingContact)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Địa chỉ nhận hàng</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.ShippingAddress, new { @class = "form-control", @placeholder = "Địa chỉ nhận hàng", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.ShippingAddress)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Ghi chú</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @placeholder = "Thông tin ghi chú", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Note)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap"></label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Lưu" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-success" style="width:120px;" />
                                        @Html.ActionLink("Trở về", "Index", null, new { @style = "width:120px;", @class = "btn btn-primary btn-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.number.min.js"></script>

    <script>
        // active product menu
        $("#menu-sale").attr("class", "active");

        $(document).ready(function () {
            // setup number input
            $("#SortIndex").focus(function () {
                $(this).number(true, 0);
            });
        })
    </script>
}

