@model DrCleanCare.Models.AddMaterialViewModel

@{
    ViewBag.Title = "Thêm nguyên liệu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-cubes"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                   <i class="fa fa-plus-square"></i> Thông tin nguyên liệu
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(
                        "Add",
                        "Material",
                        FormMethod.Post,
                        new
                        {
                            @class = "form-horizontal",
                            enctype = "multipart/form-data"
                        }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Tên nguyên liệu</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.MaterialName, new { @class = "form-control", @placeholder = "Tên nguyên liệu", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.MaterialName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Mô tả</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Mô tả", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Đơn vị tính</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.QuantityPerUnit, new { @class = "form-control", @placeholder = "Đơn vị tính", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.QuantityPerUnit)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap"></label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Lưu" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-success" style="width:120px;" />
                                        @Html.ActionLink("Trở về", "Index", null, new { @style = "width:120px;", @class = "btn btn-primary btn-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.number.min.js"></script>

    <script>
        // active product menu
        $("#menu-material").attr("class", "active");

        $(document).ready(function () {
            // setup number input
            $("#SortIndex").focus(function () {
                $(this).number(true, 0);
            });
        })
    </script>
}
