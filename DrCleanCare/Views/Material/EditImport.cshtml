@model DrCleanCare.Models.EditMaterialImportViewModel

@{
    ViewBag.Title = "Cập nhật nhập kho nguyên liệu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-cubes"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                   <i class="fa fa-plus-square"></i> Thông tin nhập nguyên liệu
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditImport", "Material", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.MaterialImportId)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Ngày nhập</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.MaterialImportDate, new { @class = "form-control text-center date-input",  @type = "text", @style = "width:120px;" })
                                        @Html.ValidationMessageFor(model => model.MaterialImportDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Nguyên liệu</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(model => model.MaterialId, ViewBag.Materials as IEnumerable<SelectListItem>, "--Chọn nguyên liệu--", new { @class = "form-control", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.MaterialId)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Kho nhập</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(model => model.StockId, ViewBag.Stocks as IEnumerable<SelectListItem>, "--Chọn nguyên liệu--", new { @class = "form-control", @type = "text", @autofocus = "" })
                                        @Html.ValidationMessageFor(model => model.StockId)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Số lượng</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control text-right number-input-decimal", @placeholder = "0", @type = "text", @style = "width:120px;" })
                                        @Html.ValidationMessageFor(model => model.Quantity)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Giá nhập</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control text-right number-input", @placeholder = "0", @type = "text", @style = "width:120px;" })
                                        @Html.ValidationMessageFor(model => model.Price)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Ghi chú</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @placeholder = "Ghi chú", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.Notes)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap"></label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Cập nhật" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-warning" style="width:120px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/datepicker.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.number.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>

    <script>
        $("#menu-material").attr("class", "active");

        $(document).ready(function () {

            // setup datetime picker
            $(".date-input").datepicker({ format: 'dd/mm/yyyy', todayHighlight: true });
            $('.date-input').on('changeDate', function (ev) { $(this).datepicker('hide') });

            // setup number input
            $('.number-input').number(true, 0);
            $('.number-input-decimal').number(true, 2);
        })
    </script>
}
