@model DrCleanCare.Models.AddTaskViewModel

@{
    ViewBag.Title = "Công việc";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="page-wrapper" class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header form-title text-primary"><i class="fa fa-tasks"></i> @ViewBag.Title</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-plus-square"></i> Thêm đầu việc
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(
                        "Add",
                        "Task",
                        FormMethod.Post,
                        new
                        {
                            @class = "form-horizontal",
                            enctype = "multipart/form-data"
                        }))
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Tên đầu việc</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.TaskName, new { @class = "form-control", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.TaskName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap">Mô tả đầu việc</label>
                                    </div>
                                    <div class="col-sm-9 form-inline">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-sm-3 text-right">
                                        <label class="control-label text-nowrap"></label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Lưu" class="btn btn-sm btn-success" style="width:120px;" />
                                        <input type="reset" value="Nhập lại" class="btn btn-sm btn-success" style="width:120px;" />
                                        @Html.ActionLink("Trở về", "Index", null, new { @style = "width:120px;", @class = "btn btn-primary btn-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        // active employee menu
        $("#menu-employee").attr("class", "active");
    </script>
}
